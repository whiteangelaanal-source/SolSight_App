# SolSight Production Environment Configuration
# Copy this file to .env and update all the values below before deployment

# Node Environment
NODE_ENV=production
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Solana Blockchain Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_COMMITMENT=confirmed

# CORS Configuration
CORS_ORIGIN=https://solsight.app

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT_MILLIS=30000
DB_POOL_IDLE_TIMEOUT_MILLIS=30000
DB_POOL_EVICT_TIMEOUT_MILLIS=1000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_CONNECTION_TIMEOUT=300000

# Redis Configuration (for sessions and cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@solsight.app
SMTP_PASS=your-app-password
EMAIL_FROM=SolSight <noreply@solsight.app>

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m
LOG_DATE_PATTERN=YYYY-MM-DD

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-at-least-32-characters-long
CSP_NONCE_SIZE=16

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,audio/mp3,audio/wav
UPLOAD_DIR=/var/www/uploads

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CDN Configuration (if using CDN)
CDN_URL=https://cdn.solsight.app
STATIC_ASSETS_URL=https://cdn.solsight.app/static

# SSL Configuration (for direct SSL termination)
SSL_CERT_PATH=/etc/ssl/cert.pem
SSL_KEY_PATH=/etc/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=solsight-backups
BACKUP_AWS_ACCESS_KEY=your-aws-access-key
BACKUP_AWS_SECRET_KEY=your-aws-secret-key
BACKUP_AWS_REGION=us-east-1

# Performance Optimization
ENABLE_COMPRESSION=true
ENABLE_HTTP2=true
KEEP_ALIVE_TIMEOUT=65000
HEADER_TIMEOUT=66000

# Development/Debug Settings (set to false in production)
DEBUG_MODE=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false